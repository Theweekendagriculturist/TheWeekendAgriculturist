<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.twa.theweekendagriculturist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.twa.theweekendagriculturist.TheWeekendAgriculturist"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.twa.theweekendagriculturist.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="com.twa.theweekendagriculturist.SplashScreenActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.twa.theweekendagriculturist.BaseActivity"
            android:label="@string/title_activity_base" >
        </activity>
        <activity
            android:name="com.twa.theweekendagriculturist.EventDetailsActivity"
            android:label="@string/title_activity_event_details" >
        </activity>
    </application>

</manifest>
